        "@typescript-eslint/parser": "5.10.2",
        "eslint": "7.32.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-config-standard": "16.0.3",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-promise": "5.2.0",
        "husky": "7.0.4",
        "prettier": "2.5.1",
        "pretty-quick": "3.1.3",
        "typescript": "4.5.5"
